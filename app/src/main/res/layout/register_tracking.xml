<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/first_step_circle"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/accent_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/first_step_line"
        android:layout_width="2dp"
        android:layout_height="100dp"
        android:background="@color/grayPrimary"
        app:layout_constraintEnd_toEndOf="@id/first_step_circle"
        app:layout_constraintStart_toStartOf="@id/first_step_circle"
        app:layout_constraintTop_toBottomOf="@id/first_step_circle" />

    <View
        android:id="@+id/second_step_circle"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/gray_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/first_step_line" />


    <View
        android:id="@+id/second_step_line"
        android:layout_width="2dp"
        android:layout_height="100dp"
        android:background="@color/grayPrimary"
        app:layout_constraintEnd_toEndOf="@id/second_step_circle"
        app:layout_constraintStart_toStartOf="@id/second_step_circle"
        app:layout_constraintTop_toBottomOf="@id/second_step_circle" />

    <View
        android:id="@+id/thrid_step_circle"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/gray_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_step_line" />

</androidx.constraintlayout.widget.ConstraintLayout>